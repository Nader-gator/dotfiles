" vim:fdm=marker
call plug#begin()
    Plug 'easymotion/vim-easymotion'
        "config {{{
        let g:EasyMotion_keys='edcrfvtgbyhnujm'
        map <C-q> <Plug>(easymotion-prefix)
        "}}}
    Plug 'sheerun/vim-polyglot'
    Plug 'wesQ3/vim-windowswap'
    Plug 'tomtom/tcomment_vim'
        "config {{{
        nmap <C-c> gcc
        "}}}
    Plug 'tpope/vim-surround'
    Plug 'junegunn/fzf', { 'dir': '~/.fzf', 'do': './install --all' }
    Plug 'junegunn/fzf.vim'
        "config {{{
        nmap <leader>ff :Files<cr>
        nmap <leader>fg :Ag<cr>
        "}}}
    Plug 'morhetz/gruvbox'
    Plug 'iamcco/markdown-preview.nvim', { 'do': { -> mkdp#util#install() } }
call plug#end()
colorscheme gruvbox
nmap <leader>n :e .temp.md<Cr>

cnoremap <C-w> <S-Right>
cnoremap <C-b> <S-Left>
cnoremap <c-h> <left>
cnoremap <c-j> <down>
cnoremap <c-k> <up>
cnoremap <c-l> <right>
cnoremap <c-b> <home>
cnoremap <c-e> <end>

" set lines=40
" set columns=1000
imap jj <Esc>
highlight CursorLineNr guifg=#e28409
set splitbelow
set splitright
set mouse=a
set fileignorecase
set wildignorecase
set ignorecase
nnoremap <leader>v :e ~/.vimrclite<cr>
nnoremap <leader>sv :source ~/.vimrclite<cr>
map <BS> \
map <BS><BS> \\
nnoremap <leader>mv :tab split<CR>
nmap <leader>tn :tabnew<cr>
nnoremap * m`:keepjumps normal! *``<cr>
syntax on
set colorcolumn=80
set expandtab
set tabstop=4
set softtabstop=4
set shiftwidth=4
set number relativenumber

nnoremap <Space> :noh<cr>
nmap Q :q<cr>
nmap ]w :w<cr>

"Copy to clipboard
vnoremap  <leader>y  "+y
nnoremap  <leader>Y  "+yg_
nnoremap  <leader>y  "+y
nnoremap  <leader>yy  "+yy
"Paste from clipboard
nnoremap <leader>p "+p
nnoremap <leader>P "+P
vnoremap <leader>p "+p
vnoremap <leader>P "+P

nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
